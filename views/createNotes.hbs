<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' />
  <title>NotePad</title>
  <style>
    #textArea {
      width: 98%;
      margin-left: 12px;
      font-family: system-ui,
        -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
        Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    }

    li {
      cursor:
        pointer;
    }

    body {
      background-image:
        url('https://c0.wallpaperflare.com/preview/153/321/260/laptop-document-paper-business.jpg');
      background-size: cover;
      background-repeat: no-repeat;
    }

    .top {
      margin-top:
        58px;
    }

    img {
      border-radius: 50%;
    }
  </style>
</head>

<body>
  <nav class='navbar navbar-expand-lg bg-body-tertiary'>
    <div class='container-fluid'>
      <a class='navbar-brand' href='#'>TextMate</a>
      {{#if user.filename}}
      <img src='/users/image' alt='{{user.filename}}' height='30' width='30' />
      {{else}}
      <img src='/blank-profile-picture-973460_1280.png' alt='No picture' height='30' width='30' />
      {{/if}}

      <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
        aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarSupportedContent'>
        <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
          <a class='text-decoration-none text-primary mx-5' href='/notes?page=1'>Notes</a>
          <a class='text-decoration-none text-primary mx-5' href='/users/email'>Add Email</a>
          <a class='text-decoration-none text-primary mx-5' href='/users/profile'>Add Image</a>
        </ul>
        <form action='/auth/logout' method='post'>
          <input type='submit' class='btn btn-secondary' value='Log Out' />
        </form>
        <form action="/users/delete" method="post">
          <input type='hidden' name='_method' value='DELETE' />
          <input type='submit' class='btn btn-danger mx-1' value='Delete Account' />
        </form>
      </div>
    </div>
  </nav>
  <center>
    <h2>Hello {{user.username}} </h2>
  </center>
  <form action='/notes' method='post'>
    <div class='my-3 mx-3'>
      <label for='Title'>Title</label>
      <input type='text' class='form-control' id='title' name='title' value='{{this.note.title}}' />
    </div>
    <label class='mx-3' for='Description'>Description</label>
    <textarea class='form-control form-control-lg' name='description' id='textArea' cols='20' rows='10'
      placeholder='Write your notes here'>{{this.note.description}}</textarea>
    <div class='form-check text-start my-3 mx-3'>
      <input class='form-check-input' type='checkbox' value='remember-me' id='checkBox' />
      <label class='form-check-label' for='checkBox'>
        Hide
      </label>
    </div>
    <button class='btn btn-primary my-2 mx-3'>Save</button>
  </form>


</body>

</html>