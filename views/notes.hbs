<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
    />
    <title>NotePad</title>
    <style>
      #textArea { width: 98%; margin-left: 12px; font-family: system-ui,
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
      Cantarell, "Open Sans", "Helvetica Neue", sans-serif; } li { cursor:
      pointer; } 
      background-size: cover; background-repeat: no-repeat; } .top { margin-top:
      58px; }
      

    </style>
  </head>
  <body>
    <nav class='navbar navbar-expand-lg bg-body-tertiary '>
      <div class='container-fluid'>
        <a class='navbar-brand' href='#'>TextMate</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item mx-3' onclick='handleUpClick()'>Upper</li>
            <li class='nav-item mx-3' onclick='handleDownClick()'>Lower</li>
            <li class='nav-item mx-3' onclick='handleCapText()'>Captalize</li>
            <li class='nav-item mx-3' onclick='handleClearText()'>Clear</li>
            <a class='text-decoration-none text-primary mx-5' href='/notes/create'>Create Notes</a>
          </ul>
        </div>
      </div>
    </nav>

    <form action='/notes' method='POST'>
      {{#each notes}}
        {{! <input type='hidden' name='_method' value='DELETE' /> }}
        <label for='Id'>Id</label>
        <input type="hidden" name='id' value='{{this.id}}' />
        {{!-- <td scope='row'> --}}
          <input
          class="col-xs-2"
            type='text'
            class='form-control'
            value='{{this.id}}'
            readonly
          />
        {{!-- </td> --}}
        {{!-- <td> --}}
        <label for='Title'>Title</label>
          <input
            type='text'
            class='form-control'
            value='{{this.title}}'
            readonly
          />

        {{!-- </td> --}}
        {{!-- <td > --}}
        <label for='Content'>Content</label>
          <input
            type='text'
            class='form-control'
            value='{{this.description}}'
            readonly
          />

        </td>
      {{/each}}
    </form>
  </body>
</html>