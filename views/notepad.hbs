<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <title>NotePad</title>
    <style>
      #textArea {
        width: 98%;
        margin-left: 12px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }
      li {
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary mx-1">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">TextMate</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item mx-3" onclick="handleUpClick()">Upper</li>
            <li class="nav-item mx-3" onclick="handleDownClick()">Lower</li>
            <li class="nav-item mx-3" onclick="handleCapText()">Captalize</li>
            <li class="nav-item mx-3" onclick="handleClearText()">Clear</li>
          </ul>
        </div>
      </div>
    </nav>
    <span class="mx-4" id="fileName">No file opened </span>

    <textarea
      class="form-control form-control-lg"
      name="textArea"
      id="textArea"
      cols="30"
      rows="15"
      placeholder="Enter your text here"
    ></textarea>
    <button class="btn btn-secondary mx-3 my-2" onclick="getFile()">
      Open
    </button>
    <button class="btn btn-secondary my-2" onclick="saveFile()">SaveAs</button>
  </body>
  <script src="/Text Editor/textMate.js"></script>
</html>
