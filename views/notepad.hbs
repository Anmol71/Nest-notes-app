<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
    />
    <title>NotePad</title>
    <style>
      #textArea { width: 98%; margin-left: 12px; font-family: system-ui,
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
      Cantarell, "Open Sans", "Helvetica Neue", sans-serif; } li { cursor:
      pointer; }
    </style>
  </head>
  <body>
    <nav class='navbar navbar-expand-lg bg-body-tertiary mx-1'>
      <div class='container-fluid'>
        <a class='navbar-brand' href='#'>TextMate</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item mx-3' onclick='handleUpClick()'>Upper</li>
            <li class='nav-item mx-3' onclick='handleDownClick()'>Lower</li>
            <li class='nav-item mx-3' onclick='handleCapText()'>Captalize</li>
            <li class='nav-item mx-3' onclick='handleClearText()'>Clear</li>
          </ul>
        </div>
      </div>
    </nav>
    {{! <span class="mx-4" id="fileName">No file opened </span> }}
    <form action='/notes' method='post'>
      <div class='my-3 mx-3'>
        <label for='Title'>Title</label>
        <input type='text' class='form-control' id='title' name='title' />
      </div>
      <label class='mx-3' for='Description'>Description</label>
      <textarea
        class='form-control form-control-lg'
        name='description'
        id='textArea'
        cols='20'
        rows='10'
        placeholder='Write your notes here'
      ></textarea>
      <div class='form-check text-start my-3 mx-3'>
        <input
          class='form-check-input'
          type='checkbox'
          value='remember-me'
          id='checkBox'
        />
        <label class='form-check-label' for='checkBox'>
          Hide
        </label>
      </div>
      <button class='btn btn-secondary my-2 mx-3'>Save</button>
    </form>
  <form action='/shared_notes' method='post'>
    <button class='btn btn-secondary mx-3'>Share</button> 

  </form>
  </body>

</html>